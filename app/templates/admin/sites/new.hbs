<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <div class="page-header">
      <h2 class="spacing-top spacing-top-lg">Create a New Site</h2>
    </div>

    {{#form-for model}}

      {{input title}}

      {{input label}}

      {{input identifier}}

      {{input host}}

      {{input availableLocales as="multi-select2"
        content=controller.availableLocales
        prompt="Choose Available Locales"
      }}

      {{input defaultLocale as="default-locale-select"
        content=availableDefaultLocales
        optionValuePath="content.id"
        optionLabelPath="content.text"
        prompt="Choose a Default Locale"
      }}

      {{submit}}

      {{#link-to 'admin.dashboard' classNames='btn btn-default'}}Cancel{{/link-to}}

    {{/form-for}}

  </div>
</div>