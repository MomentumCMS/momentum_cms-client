<div class="row">
  <div class="col-sm-3 col-md-2 sidebar">
    {{partial 'admin/layout/sidebar'}}
  </div><!-- .sidebar -->
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

    <div class="page-header">
      <h3>Edit Page</h3>
    </div>

    {{#form-for model}}

      {{input label}}

      {{input identifier}}

      {{input slug}}

      {{submit value=submitValue}}

      {{#link-to 'admin.pages.index' classNames='btn btn-default'}}Cancel{{/link-to}}

      <a href="#delete" class="btn btn-danger" {{action 'deleteRecord' model}}>Delete</a>

    {{/form-for}}

  </div><!-- .main -->
</div>

