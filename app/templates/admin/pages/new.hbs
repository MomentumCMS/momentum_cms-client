<div class="row">
  <div class="col-sm-3 col-md-2 sidebar">
    {{partial 'admin/layout/sidebar'}}
  </div><!-- .sidebar -->
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

    <div class="page-header">
      <h3>Add New Page</h3>
    </div>

    {{#form-for model.page}}

      {{input label}}

      {{input identifier}}

      {{input slug}}

      {{input template
        as="select"
        collection="controller.model.templates"
        selection="template"
        optionValuePath="content.id"
        optionLabelPath="content.label"
        prompt="Select Template"
      }}

      {{submit}}

      {{#link-to 'admin.pages.index' classNames='btn btn-default'}}Cancel{{/link-to}}

    {{/form-for}}

  </div><!-- .main -->
</div>

